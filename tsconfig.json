{
  "compilerOptions": {    
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noImplicitAny": false,    
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": [
      "pinia-plugin-persist",
      "@types/node"
    ]
  },
  "include": ["resources/js/**/*"],
  "exclude": ["node_modules", ".nuxt", "dist", "public"]
}